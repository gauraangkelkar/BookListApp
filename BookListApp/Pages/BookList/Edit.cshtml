@page
@model BookListApp.Pages.BookList.EditModel
@{
}
<h2 class="text-info p-2">Edit Book</h2>
<div class="container row">
    <div class="col-12">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Book.id"/>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Title"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Book.Title" class="form-control" />
                </div>
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.AuthorName"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Book.AuthorName" class="form-control" />
                </div>
                <span asp-validation-for="Book.AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Price"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Book.Price" class="form-control" />
                </div>
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-4">
                    <input type="submit" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-secondary">Go Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}